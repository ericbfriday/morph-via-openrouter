# Example environment variables for Morph MCP OpenRouter Server
# Copy this file to .env and fill in your actual values

# ============================================================================
# Required Configuration
# ============================================================================

# Required: Your Morph/OpenRouter API key
# Get your API key from: https://openrouter.ai/keys
MORPH_API_KEY=your-api-key-here

# ============================================================================
# Server Configuration
# ============================================================================

# Optional: Base URL for the Morph/OpenRouter API
MORPH_BASE_URL=https://openrouter.ai/api/v1

# Optional: Model to use
# Available models: morph/morph-v2, morph/morph-v3-fast, morph/morph-v3-large
MORPH_MODEL=morph/morph-v3-fast

# Optional: Port for the server
PORT=3333

# Optional: Log level (debug, info, warn, error)
LOG_LEVEL=info

# ============================================================================
# OpenRouter Analytics (Optional)
# ============================================================================

# Optional: OpenRouter specific headers for analytics
# These help OpenRouter understand how their API is being used
OPENROUTER_REFERRER=https://github.com/ericbfriday/morph-via-openrouter
OPENROUTER_TITLE=Morph MCP OpenRouter Server

# ============================================================================
# Advanced Configuration
# ============================================================================

# Optional: Path to env file (if not using default .env)
MORPH_ENV_PATH=

# ============================================================================
# MCP Server Configuration (for use with Claude Code)
# ============================================================================

# The .claude/mcp.json file references these environment variables
# Make sure to set them before starting MCP servers through Claude Code
